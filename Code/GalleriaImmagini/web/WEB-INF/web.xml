<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <display-name>GalleriaImmagini</display-name>
    <context-param>
        <param-name>dbUrl</param-name>
        <param-value>jdbc:mysql://localhost:3306/dbgalleriaimmagini</param-value>
    </context-param>
    <context-param>
        <param-name>dbUser</param-name>
        <param-value>supergiu</param-value>
    </context-param>
    <context-param>
        <param-name>dbPassword</param-name>
        <param-value>Super_02</param-value>
    </context-param>
    <context-param>
        <param-name>dbDriver</param-name>
        <param-value>com.mysql.cj.jdbc.Driver</param-value>
    </context-param>
    <filter>
        <filter-name>LoginChecker</filter-name>
        <filter-class>it.polimi.tiw2020.filters.LoginChecker</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LoginChecker</filter-name>
        <url-pattern>/AddComment</url-pattern>
        <url-pattern>/Home</url-pattern>
        <url-pattern>/GetAlbum</url-pattern>
        <url-pattern>/Logout</url-pattern>
        <url-pattern>/Home.html</url-pattern>
        <url-pattern>/Album.html</url-pattern>
    </filter-mapping>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>